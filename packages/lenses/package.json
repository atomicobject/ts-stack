{
  "name": "@atomic-object/lenses",
  "version": "0.1.4",
  "description": "A lens library for TypeScript",
  "repository": "https://github.com/atomicobject/lenses",
  "author": "Atomic Object",
  "license": "MIT",
  "typeScriptVersion": "2.3",
  "scripts": {
    "build": "yarn build:es && yarn build:commonjs",
    "build:es": "tsc",
    "build:commonjs": "tsc -p ./tsconfig.commonjs.json",
    "watch": "nodemon -w src -x 'yarn build'",
    "clean": "rimraf es lib"
  },
  "main": "commonjs/index.js",
  "module": "es/index.js",
  "typings": "es/index",
  "directories": {
    "lib": "./lib"
  },
  "files": [
    "lib",
    "es"
  ],
  "npmFileMap": [{
    "basePath": "/lib/",
    "files": [
      "*.js"
    ]
  }],
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ]
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/lodash": "^4.14.74",
    "jest": "^20.0.4",
    "jsverify": "^0.8.2",
    "lodash": "^4.17.4",
    "nodemon": "^1.14.10",
    "rimraf": "^2.6.2",
    "ts-jest": "^20.0.11",
    "typescript": "^2.6.2"
  }
}
