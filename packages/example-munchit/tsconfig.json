{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./modules",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist/stuff/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "es5"
  },
  "exclude": ["node_modules", "dist"]
}
