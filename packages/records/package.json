{
  "name": "@atomic-object/records",
  "version": "0.1.0",
  "description": "A dataloader and knex-based library for building database repositories",
  "repository": "https://github.com/atomicobject/ts-stack",
  "author": "Atomic Object",
  "license": "MIT",
  "typeScriptVersion": "2.8",
  "scripts": {
    "build": "yarn build:es && yarn build:commonjs",
    "build:es": "tsc",
    "build:commonjs": "tsc -p ./tsconfig.commonjs.json",
    "watch": "nodemon -w src -x 'yarn build'",
    "clean": "rimraf es lib",
    "prepublish": "yarn build"
  },
  "sideEffects": false,
  "main": "commonjs/index.js",
  "module": "es/index.js",
  "typings": "es/index",
  "directories": {
    "lib": "./lib"
  },
  "files": [
    "commonjs",
    "es"
  ],
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/knex": "^0.0.61",
    "@types/lodash.groupby": "^4.6.3",
    "@types/lodash.keyby": "^4.6.3",
    "jest": "^20.0.4",
    "jsverify": "^0.8.2",
    "nodemon": "^1.14.10",
    "rimraf": "^2.6.2",
    "ts-jest": "^20.0.11",
    "typescript": "^2.8.0"
  },
  "peerDependencies": {
    "dataloader": "^1.0.0",
    "knex": "^0.13.0"
  },
  "dependencies": {
    "lodash.groupby": "^4.6.0",
    "lodash.keyby": "^4.6.0"
  }
}
